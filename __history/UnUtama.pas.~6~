unit UnUtama;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ZAbstractConnection, ZConnection,Inifiles,
  Vcl.StdCtrls;

type
  TFrmUtama = class(TForm)
    ZConnection1: TZConnection;
    Button1: TButton;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    FSn :string;
    FVerification :string;
    FActivation :string;

  end;

var
  FrmUtama: TFrmUtama;

implementation

{$R *.dfm}

uses UnDaftar;

procedure TFrmUtama.Button1Click(Sender: TObject);
begin

  frmDaftar.showmodal;
end;

procedure TFrmUtama.FormCreate(Sender: TObject);
var IniFile : TIniFile;
begin
  IniFile := TIniFile.Create(ChangeFileExt(Application.ExeName,'.ini'));
  try
  FSn := IniFile.ReadString('finger','sn','');
  FVerification := IniFile.ReadString('finger','verification','');
  FActivation := IniFile.ReadString('finger','activation','');

  ZConnection1.HostName := IniFile.ReadString('connection','host','localhost');
  ZConnection1.Password := IniFile.ReadString('connection','password','');
  ZConnection1.Database := IniFile.ReadString('connection','database','fingerprint');
  ZConnection1.Connect;
  finally
    IniFile.Free;
  end;
end;

end.
